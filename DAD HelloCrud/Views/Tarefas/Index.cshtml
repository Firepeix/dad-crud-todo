@model IEnumerable<DAD_HelloCrud.Models.Tarefa>

@{
    ViewBag.Title = "Lista de tarefas";
    ViewBag.Aviso = "Não há registros.";
}

<h2>Lista de Tarefas</h2>

<p><a class="btn btn-primary" href="@Url.Action("Create", "Tarefas")">Criar Tarefas</a></p>
<hr />

@if (@Model.Count() > 0)
{

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dificuldade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.feita)
            </th>
            <th>
                Operações
            </th>
            <th></th>
        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dificuldade)
                </td>
                <td>
                    @(item.feita ? "Feita" : "Não Feita")
                </td>
                <td>
                    @Html.ActionLink("Marcar Feita", "DoneTarefa", new { id = item.id }) |
                    @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.id })
                </td>
            </tr>
        }
    </table>

}
else
{
    <b></b>
    @ViewBag.Aviso;
    <p></p>
}

<div>
    @Html.ActionLink("Voltar para pagina inicial", "Index")
</div>